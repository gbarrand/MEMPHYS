    else
      CLHEP_home=/usr/local/CLHEP/2.0.4.2
      geant4_home=/usr/local/geant4/8.2
    fi
  
    cppflags="${cppflags} -I${CLHEP_home}/include"

    cppflags="${cppflags} -I${geant4_home}/include"

    libs="${libs} -L${geant4_home}/lib -lG4readout -lG4run -lG4event -lG4tracking -lG4processes -lG4digits_hits -lG4track -lG4particles -lG4geometry -lG4graphics_reps -lG4materials -lG4intercoms -lG4global"

    libs="${libs} -L${CLHEP_home}/lib -lCLHEP"
  
