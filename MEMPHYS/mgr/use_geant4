     #geant4_home=/usr/local/geant4/10.03.p01_g
    fi
  
    cppflags="${cppflags} -I${geant4_home}/include/Geant4"

    libs="${libs} -L${geant4_home}/lib -lG4readout -lG4run -lG4event -lG4tracking -lG4processes -lG4digits_hits -lG4track -lG4particles -lG4geometry -lG4graphics_reps -lG4materials -lG4intercoms -lG4global -lG4clhep"
