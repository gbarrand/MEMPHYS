elif [ ${build_geant4_82} = "yes" ] ; then

  # geant4 82 :
  if [ "${use_geant4}" = "yes" ] ; then

    if [ "`uname -n | grep iridium.lunarc.lu.se`" != "" ] ; then
      CLHEP_home=/nfs/users/gbarrand/usr/local/CLHEP/2.0.4.2
