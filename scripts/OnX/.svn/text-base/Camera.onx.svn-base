<!--
   The orientation field of an SoCamera defines
  a rotation from the default position, that is to say
  a camera looking toward -z axis with up along y axis.
-->


<widget class="CascadeButton">
  <label>Camera</label>
  <widget class="Menu">
    <widget class="MenuItem">
      <label>Front (+z)</label>
      <activate exec="DLD">OnX region_setNode type SoCamera height 70000 position 0 0 70000 orientation 0 1 0 0</activate>
    </widget>
    <widget class="MenuItem">
      <label>Back (-z)</label>
      <activate exec="DLD">OnX region_setNode type SoCamera height 70000 position 0 0 -70000 orientation 0 1 0 3.14</activate>
    </widget>
    <widget class="MenuItem">
      <label>Side +z at left</label>
      <activate exec="DLD">OnX region_setNode type SoCamera height 70000 position 70000 0 0 orientation 0 1 0 1.57</activate>
    </widget>
    <widget class="MenuItem">
      <label>Side +z at right</label>
      <activate exec="DLD">OnX region_setNode type SoCamera height 70000  position -70000 0 0 orientation 0 1 0 -1.57</activate>
    </widget>
    <widget class="MenuItem">
      <label>Top</label>
      <activate exec="DLD">OnX region_setNode type SoCamera height 70000 position 0 70000 0 orientation 1 0 0 -1.57</activate>
    </widget>
    <widget class="MenuItem">
      <label>Dump</label>
      <activate exec="DLD">OnX region_dumpCamera</activate>
    </widget>
  </widget>
</widget>
