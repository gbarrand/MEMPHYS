#!/bin/sh -f

# options : -clang_11 -sys_geant4

bush_home=../../../softinex/bush

. ${bush_home}/args

. ${bush_home}/ourex_header

use_archive=no

#//////////////////////////////////////////////////////
#//////////////////////////////////////////////////////
#//////////////////////////////////////////////////////

cppflags="${cppflags} -DAPP_USE_AIDA"

cppfiles=
cppfiles="${cppfiles} ../applications/HitsCollectionAccessor.cxx"

#//////////////////////////////////////////////////////
#//////////////////////////////////////////////////////
#//////////////////////////////////////////////////////

use_inlib=yes
use_geant4=yes
use_osc_geant4=yes

. ${bush_home}/use/geant4
. ${bush_home}/use/inlib
. ${bush_home}/use/osc_geant4

#//////////////////////////////////////////////////////
#//////////////////////////////////////////////////////
#//////////////////////////////////////////////////////

if [ ${build_visual} = "yes" ] ; then
  libs="${build_path}/MEMPHYSCore.lib ${libs}"
else
  libs="-L${build_path} -lMEMPHYSCore ${libs}"
fi

objs=
app_exe=MEMPHYS_session
app_src=../applications/MEMPHYS_session.cxx

. ${bush_home}/application

. ${bush_home}/clean

